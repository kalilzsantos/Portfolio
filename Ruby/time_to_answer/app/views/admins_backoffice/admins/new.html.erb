<div class="col-md-6 col-sm-6 col-xs-12">
  <div class="col-lg-12">
    <h2 class="page-header">NOVO<h2>
  </div>
</div>
  <% if @admin.errors.any? %> 
    <div class='alert alert-danger alert-dismissable'>
      <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>x</button>
      <ul>
        <% if @admin.errors.full_messages.each do |message| %>
          <li> <%= message %><%end%> </li>
        <% end %>
      </ul>
    </div>
  <% end %> 


  <%= form_with(model:  [ :admins_backoffice, @admin ], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', placeholder:"Email do Adminstrador" %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control', placeholder:"Senha do Adminstrador" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: 'form-control', placeholder:"Confirmar senha do Adminstrador" %>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  <% end %> 