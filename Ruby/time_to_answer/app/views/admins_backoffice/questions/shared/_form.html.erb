<div class="col-md-6 col-sm-6 col-xs-12">
  <div class="col-lg-12">
    <h2 class="page-header"> <%= action_message %> <h2>
  </div>
</div>
  <% if @question.errors.any? %> 
    <div class='alert alert-danger alert-dismissable'>
      <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>x</button>
      <ul>
        <% if @question.errors.full_messages.each do |message| %>
          <li> <%= message %><%end%> </li>
        <% end %>
      </ul>
    </div>
  <% end %> 


  <%= form_with(model:  [ :admins_backoffice, @question ], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control', placeholder:"Descrição da Questão", rows: 5 %>
    </div>
    <div class="form-group">
      <%= form.label :subject_id %>
      <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, {class: 'form-control'}) %>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  <% end %> 