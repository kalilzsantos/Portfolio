<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">LISTANDO QUESTÕES<h2>
  </div>
</div>

<div class="col-md-6 col-sm-6 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Settings 1</a>
            </li>
            <li><a href="#">Settings 2</a>
            </li>
          </ul>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content" style="width: 205%" >
      <table class="table table-hover"  >
        <thead>
          <tr>
            <th>#</th>
            <th>Questão</th>
            <th>Assunto</th>
            <th><%= link_to new_admins_backoffice_question_path, class:" btn-success btn-circle" do %>
                  <i class="fa fa-plus fw"></i>
                <% end %></th>
          </tr>
        </thead>
        <tbody >
          <% @questions.each do |question| %>
            <tr> 
              <th scope="row"> <%= question.id %> </th>
              <td><%= question.description.truncate(50) %></td>
              <td><%= question.subject.description.truncate(30) %></td>
              <td> 
                <%= link_to edit_admins_backoffice_question_path(question), class:" btn-info btn-circle" do %>
                  <i class="fa fa-edit fw"></i>
                <% end %>

                <%= link_to admins_backoffice_question_path(question), method: :delete, class:" btn btn-danger btn-circle ", data: { confirm: 'Você tem certeza?' } do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div>
    <%= paginate @questions, class: "text-center"%>
  </div>
</div>